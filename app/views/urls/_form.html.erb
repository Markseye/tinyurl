<%= form_for(@url) do |f| %>
  <% if @url.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@url.errors.count, "error") %> prohibited this url from being saved:</h2>

      <ul>
      <% @url.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "Long URL" %><br>
    <font color ="red" size="1"> <%="*Url should be copy and pasted from the browser"%></font><br>
    <%= f.text_field :long%>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
